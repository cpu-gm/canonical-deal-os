    font-family: 'Helvetica Neue', Arial, sans-serif;
    font-size: 10pt;
    line-height: 1.4;
    max-width: 8.5in;
    margin: 0 auto;
    padding: 0.75in;
  }

  .letterhead {
    display: flex;
    justify-content: space-between;
    margin-bottom: 2em;
    padding-bottom: 1em;
    border-bottom: 2px solid #0A0A0A;
  }

  .company-info {
    line-height: 1.4;
  }

  .date {
    text-align: right;
  }

  .document-title {
    text-align: center;
    margin-bottom: 1.5em;
  }

  .document-title h1 {
    font-size: 14pt;
    letter-spacing: 1px;
  }

