    border: 1px solid #D4D4D4;
  }

  .tenant-table td {
    padding: 8px;
    border: 1px solid #D4D4D4;
    font-size: 9pt;
  }

  .status-cell {
    width: 80px;
    text-align: center;
  }

  .delivery-info {
    background: #FEF3C7;
    padding: 1em;
    margin: 1em 0;
    border-left: 4px solid #F59E0B;
  }

  .closing {
    margin-top: 2em;
  }

  .page-break {
    page-break-after: always;
  }

  .estoppel-form {
    border: 2px solid #0A0A0A;
    padding: 1.5em;
  }

  .estoppel-form h1 {
    text-align: center;
    font-size: 14pt;
    margin-bottom: 1em;
    padding-bottom: 0.5em;
    border-bottom: 1px solid #D4D4D4;
  }

  .form-intro {
    margin-bottom: 1.5em;
  }

  .property-reference {
    background: #F5F5F5;
    padding: 0.5em 1em;
    margin-top: 0.5em;
    font-weight: 600;
  }

  .form-section {
    margin-bottom: 1.5em;
  }

  .form-section h3 {
    font-size: 10pt;
    background: #E5E5E5;
    padding: 6px 12px;
    margin-bottom: 1em;
  }

  .form-table {
    width: 100%;
    border-collapse: collapse;
  }

  .form-table td {
    padding: 8px;
    border: 1px solid #D4D4D4;
  }

  .label-cell {
    width: 200px;
    background: #F5F5F5;
    font-weight: 500;
  }

  .input-cell {
    min-height: 24px;
  }

  .cert-list {
    list-style: none;
    padding: 0;
  }

  .cert-list li {
    margin-bottom: 1em;
  }

  .cert-item {
    display: flex;
    align-items: flex-start;
    gap: 0.5em;
  }

  .checkbox {
    font-size: 14pt;
    line-height: 1;
  }

  .input-line {
    border-bottom: 1px solid #A3A3A3;
    min-height: 24px;
    margin-top: 0.5em;
  }

  .input-line.wide {
    margin-bottom: 1.5em;
  }

  .comments-box {
    border: 1px solid #D4D4D4;
    min-height: 100px;
    margin-top: 0.5em;
  }

  .signature-section {
    margin-top: 2em;
  }

  .signature-block {
    max-width: 350px;
  }

  .signature-header {
    font-weight: 600;
    margin-bottom: 1em;
  }

  .signature-line {
    border-bottom: 1px solid #171717;
    min-height: 40px;
    margin-bottom: 0.25em;
  }

  .signature-label {
    font-size: 8pt;
    color: #737373;
    margin-bottom: 1.5em;
  }

  .form-footer {
    margin-top: 2em;
    padding-top: 1em;
    border-top: 1px solid #D4D4D4;
  }

  .disclaimer {
    font-size: 8pt;
    color: #525252;
  }
</style>
