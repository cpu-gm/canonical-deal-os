    font-family: 'Helvetica Neue', Arial, sans-serif;
    font-size: 9pt;
    line-height: 1.3;
    max-width: 8.5in;
    margin: 0 auto;
    padding: 0.5in;
  }

  .document-title {
    text-align: center;
    margin-bottom: 1.5em;
    padding-bottom: 0.5em;
    border-bottom: 2px solid #0A0A0A;
  }

